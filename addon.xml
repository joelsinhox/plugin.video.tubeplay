<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tubeplay" name="TUBE PLAY" version="0.0.1" provider-name="Joel">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.beautifulsoup4"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.typing_extensions"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <language>en</language>
        <summary lang="en_GB">TUBE PLAY</summary>
        <description lang="en_GB">Watch AHL games on Kodi, with HD quality streaming</description>
        <disclaimer lang="en_GB">Requires a valid AHLTV account to view live and archived games.</disclaimer>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>
            - Added new team entries for Abbotsford and Bridgeport
        </news>
        <license>GPL-2.0-or-later</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=351891</forum>
        <website>https://www.theahl.com/ahltv</website>
        <source>https://github.com/sobralik/plugin.video.ahltv</source>
    </extension>
</addon>
